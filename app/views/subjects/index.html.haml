.page-header
  %h1.title Subjects

.row
  - @subjects.in_groups(3, false) do |group|
    .span3
      %ol{start: 1+@subjects.index(group.first).to_i}
        = list_of(group) do |subject|
          = link_to(subject) do
            = subject.name
            = locked_icon if subject.dm_only?


= content_for(:sidebar) do
  %ul.nav.nav-tabs.nav-stacked
    - if can?(:create, Subject)
      %li
        = link_to("New", new_subject_path)
