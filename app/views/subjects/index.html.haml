.page-header
  %h1.title Subjects

.row
  - @subjects.in_groups(3, false) do |group|
    .col-md-3
      %ol{start: 1+@subjects.index(group.first).to_i}
        = list_of(group) do |subject|
          = link_to(subject) do
            = subject.name
          = attachment_icon(subject)
          = context_icon(subject)

= content_for(:sidebar) do
  - if can?(:create, Subject)
    .panel.panel-default
      .panel-heading
        %h4
          Actions
      .panel-body
        %ul.list-unstyled
          %li
            = link_to(new_subject_path, accesskey: "n") do
              = fa_icon("plus")
              New Subject
