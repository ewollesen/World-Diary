.page-header
  %h1.title
    = fa_icon("tag")
    = @tag.name

.row
  - @subjects.in_groups(3, false) do |group|
    .col-md-4
      %ol{start: 1+@subjects.index(group.first).to_i}
        = list_of(group) do |subject|
          = link_to(subject) do
            = subject.name

= render "selected_tags_links"
