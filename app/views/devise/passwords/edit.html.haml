.page-header
  %h1 Change your password

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), wrapper: :horizontal_form, html: {class: "form-horizontal", role: "form"}) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token

  = f.input :password, label: "New password"
  = f.input :password_confirmation, label: "Confirm new password"

  .form-group
    .col-sm-offset-3.col-sm-9
      = f.button :submit, "Change my password", class: "btn-primary"

  .form-group
    .col-sm-offset-3.col-sm-9
      = render :partial => "devise/shared/links"
