.page-header
  %h1 Sign in

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), wrapper: :horizontal_form, html: {class: "form-horizontal", role: "form"}) do |f|
  = f.input :email
  = f.input :password

  - if devise_mapping.rememberable?
    = f.input :remember_me, as: :boolean, wrapper: :horizontal_boolean

  .form-group
    .col-sm-offset-3.col-sm-9
      = f.button :submit, "Sign in", class: "btn-primary"
      = link_to "Cancel", root_path, class: "btn btn-link"
  .form-group
    .col-sm-offset-3.col-sm-9
      = render :partial => "devise/shared/links"
