.page-header
  %h1 Sign up

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), wrapper: :horizontal_form, html: {class: "form-horizontal", role: "form"}) do |form|
  = render form

  .form-group
    .col-sm-offset-3.col-sm-9
      = form.button :submit, "Sign up", class: "btn-primary"
      = link_to "Cancel", root_path, class: "btn btn-link"
  .form-group
    .col-sm-offset-3.col-sm-9
      = render :partial => "devise/shared/links"
