.page-header
  %h1 User

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), wrapper: :horizontal_form, html: {method: :put, class: "form-horizontal", role: "form"}) do |form|
  = render form

  .form-group
    .col-sm-offset-3.col-sm-9
      = form.button :submit, "Update", class: "btn-primary"
      = link_to "Cancel", root_path, class: "btn btn-link"

  .form-group
    %h3 Cancel my account
    %p
      Unhappy?
      = succeed(".") do
        = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete
